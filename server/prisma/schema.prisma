// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  email     String
  password  String?
  profile   String?
  Video     Video[]
  Subscribe Subscribe[]
  Likes     Likes[]
  Comments  Comments[]
}

model Video {
  id          Int        @id @default(autoincrement())
  title       String
  videoUrl    String
  imgUrl      String
  description String?
  createdAt   DateTime   @default(now())
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  Views       Views[]
  Likes       Likes[]
  Comments    Comments[]
}

model Views {
  userId  Int
  videoId Int
  video   Video @relation(fields: [videoId], references: [id])

  @@id([userId, videoId])
}

model Subscribe {
  id           Int  @id @default(autoincrement())
  subscriberId Int
  channelId    Int
  user         User @relation(fields: [subscriberId], references: [id])
}

model Likes {
  id      Int   @id @default(autoincrement())
  userId  Int
  videoId Int
  user    User  @relation(fields: [userId], references: [id])
  video   Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Comments {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  userId      Int
  videoId     Int
  user        User     @relation(fields: [userId], references: [id])
  video       Video    @relation(fields: [videoId], references: [id])
}
